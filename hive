#!/bin/bash
# hive - Agent swarm manager
# Manages workers, repo transfers, and Telegram notifications

set -e

# Resolve HIVE_TOOLS: installed location or repo-local
if [ -d "/etc/agent-setup/tools" ]; then
    HIVE_DIR="/etc/agent-setup"
    HIVE_TOOLS="$HIVE_DIR/tools"
else
    # Running from repo checkout directly
    HIVE_TOOLS="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/tools"
    HIVE_DIR="/etc/agent-setup"
fi

export HIVE_DIR HIVE_TOOLS

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
NC='\033[0m'

show_help() {
    echo -e "${CYAN}hive${NC} - Agent swarm manager"
    echo ""
    echo "Usage: hive <command> [options]"
    echo ""
    echo -e "${BLUE}Setup:${NC}"
    echo "  init                              Initialize this machine as a hive manager"
    echo ""
    echo -e "${BLUE}Workers:${NC}"
    echo "  worker setup <host> --name <name> Set up a remote worker via SSH"
    echo "  worker add <name> [--host <host>] Register a worker without setup"
    echo "  worker ls                         List registered workers"
    echo "  worker rm <name>                  Remove a worker from registry"
    echo ""
    echo -e "${BLUE}Repo transfer:${NC}"
    echo "  repo send <worker> [branch]       Send current repo to a worker"
    echo "  repo fetch <worker> [branch]      Fetch a repo from a worker"
    echo ""
    echo -e "${BLUE}General:${NC}"
    echo "  help                              Show this help"
    echo "  version                           Show version"
}

CMD="${1:-help}"
shift 2>/dev/null || true

case "$CMD" in
    init)
        exec bash "$HIVE_TOOLS/hive/init.sh" "$@"
        ;;
    worker)
        exec bash "$HIVE_TOOLS/hive/worker.sh" "$@"
        ;;
    repo)
        SUBCMD="${1:-}"
        shift 2>/dev/null || true
        case "$SUBCMD" in
            send)    exec bash "$HIVE_TOOLS/repo-transfer/repo-send" "$@" ;;
            fetch)   exec bash "$HIVE_TOOLS/repo-transfer/repo-fetch" "$@" ;;
            receive) exec bash "$HIVE_TOOLS/repo-transfer/repo-receive" "$@" ;;
            *)
                echo "Usage: hive repo <send|fetch|receive>"
                exit 1
                ;;
        esac
        ;;
    help|--help|-h)
        show_help
        ;;
    version|--version|-v)
        echo "hive v1.0.0"
        ;;
    *)
        echo -e "${RED}Unknown command: $CMD${NC}"
        echo "Run 'hive help' for usage"
        exit 1
        ;;
esac
