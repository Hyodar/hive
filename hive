#!/bin/bash
# hive - Agent swarm manager
# Manages workers, repo transfers, and Telegram notifications

set -e

HIVE_DIR="/etc/hive"

# Resolve HIVE_TOOLS: installed location > .source_repo > repo-local
if [ -d "$HIVE_DIR/tools" ]; then
    HIVE_TOOLS="$HIVE_DIR/tools"
elif [ -f "$HIVE_DIR/.source_repo" ]; then
    HIVE_TOOLS="$(cat "$HIVE_DIR/.source_repo")/tools"
else
    HIVE_TOOLS="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/tools"
fi

export HIVE_DIR HIVE_TOOLS

HIVE_SSH_DIR="$HIVE_DIR/ssh"

# Resolve a worker name to its SSH host from workers.json
resolve_worker() {
    local NAME="$1"
    local WORKERS_FILE="$HIVE_DIR/workers.json"
    if [ -f "$WORKERS_FILE" ]; then
        local HOST
        HOST=$(jq -r --arg name "$NAME" '.workers[$name].host // empty' "$WORKERS_FILE" 2>/dev/null)
        if [ -n "$HOST" ]; then
            echo "$HOST"
            return
        fi
    fi
    echo "$NAME"
}

# Resolve SSH identity for a worker: per-worker quick-ssh key > configured ssh_key > default
resolve_worker_ssh_id() {
    local NAME="$1"
    local HIVE_KEY="$HIVE_SSH_DIR/${NAME}_ed25519"
    if [ -f "$HIVE_KEY" ]; then
        echo "-i $HIVE_KEY"
        return
    fi
    local WORKERS_FILE="$HIVE_DIR/workers.json"
    if [ -f "$WORKERS_FILE" ]; then
        local SSH_KEY
        SSH_KEY=$(jq -r --arg name "$NAME" '.workers[$name].ssh_key // empty' "$WORKERS_FILE" 2>/dev/null)
        if [ -n "$SSH_KEY" ] && [ -f "$SSH_KEY" ]; then
            echo "-i $SSH_KEY"
            return
        fi
    fi
}

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
NC='\033[0m'

show_help() {
    echo -e "${CYAN}hive${NC} - Agent swarm manager"
    echo ""
    echo "Usage: hive <command> [options]"
    echo ""
    echo -e "${BLUE}Setup:${NC}"
    echo "  init                              Initialize this machine as a hive manager"
    echo ""
    echo -e "${BLUE}Workers:${NC}"
    echo "  worker setup <host> --name <name> Set up a remote worker via SSH"
    echo "  worker add <name> [--host <host>] Register a worker without setup"
    echo "  worker ls                         List registered workers"
    echo "  worker rm <name>                  Remove a worker from registry"
    echo "  worker set quick-ssh --name <n>   Set up passwordless SSH to a worker"
    echo "  worker ssh <name>                 SSH into a worker"
    echo ""
    echo -e "${BLUE}Repo registry:${NC}"
    echo "  repo add <worker> [name]          Register current repo on a worker"
    echo "  repo ls [worker]                  List repos (all workers or specific)"
    echo "  repo rm <worker> <name>           Remove a repo from a worker"
    echo ""
    echo -e "${BLUE}Repo transfer:${NC}"
    echo "  Refspec: <local_branch>[:<repo_name>][@<remote_branch>]"
    echo "  repo send <worker> [refspec]      Send current repo to a worker"
    echo "  repo fetch <worker> [refspec]     Fetch a repo from a worker"
    echo "  repo ssh <worker> [repo_name]     SSH into worker at the repo directory"
    echo ""
    echo -e "${BLUE}General:${NC}"
    echo "  help                              Show this help"
    echo "  version                           Show version"
}

CMD="${1:-help}"
shift 2>/dev/null || true

case "$CMD" in
    init)
        exec bash "$HIVE_TOOLS/hive/init.sh" "$@"
        ;;
    worker)
        exec bash "$HIVE_TOOLS/hive/worker.sh" "$@"
        ;;
    repo)
        SUBCMD="${1:-}"
        shift 2>/dev/null || true
        case "$SUBCMD" in
            add|ls|list|rm|remove)
                exec bash "$HIVE_TOOLS/repo/repo-registry.sh" "$SUBCMD" "$@"
                ;;
            send|fetch)
                # Resolve first positional arg (worker name) to SSH host,
                # export HIVE_WORKER_NAME for per-worker repo registry,
                # and export HIVE_SSH_ID for per-worker SSH identity.
                RESOLVED_ARGS=()
                SKIP_NEXT=false
                HOST_RESOLVED=false
                for arg in "$@"; do
                    if $SKIP_NEXT; then
                        RESOLVED_ARGS+=("$arg")
                        SKIP_NEXT=false
                        continue
                    fi
                    case "$arg" in
                        -p|--path) RESOLVED_ARGS+=("$arg"); SKIP_NEXT=true ;;
                        -*) RESOLVED_ARGS+=("$arg") ;;
                        *)
                            if ! $HOST_RESOLVED; then
                                export HIVE_WORKER_NAME="$arg"
                                export HIVE_SSH_ID=$(resolve_worker_ssh_id "$arg")
                                RESOLVED_ARGS+=("$(resolve_worker "$arg")")
                                HOST_RESOLVED=true
                            else
                                RESOLVED_ARGS+=("$arg")
                            fi
                            ;;
                    esac
                done
                exec bash "$HIVE_TOOLS/repo/repo-$SUBCMD" "${RESOLVED_ARGS[@]}"
                ;;
            apply) exec bash "$HIVE_TOOLS/repo/repo-apply" "$@" ;;
            ssh)
                WORKER="${1:-}"
                if [ -z "$WORKER" ]; then
                    echo -e "${RED}Usage: hive repo ssh <worker> [repo_name]${NC}"
                    exit 1
                fi
                shift
                EXPLICIT_REPO="${1:-}"
                SSH_HOST=$(resolve_worker "$WORKER")
                REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null) || {
                    echo -e "${RED}Error: not in a git repository${NC}"; exit 1
                }
                # Determine repo name: explicit arg > registry lookup > basename
                if [ -n "$EXPLICIT_REPO" ]; then
                    REPO_NAME="$EXPLICIT_REPO"
                else
                    source "$HIVE_TOOLS/repo/repo-registry.sh"
                    ensure_workers_file 2>/dev/null && {
                        REPO_NAME=$(lookup_worker_repo_by_path "$WORKER" "$REPO_ROOT")
                    }
                    REPO_NAME="${REPO_NAME:-$(basename "$REPO_ROOT")}"
                fi
                WORKER_SSH_ID=$(resolve_worker_ssh_id "$WORKER")
                REMOTE_BASE=$(ssh $WORKER_SSH_ID "$SSH_HOST" bash -c "'
                    BP=\$HOME
                    CFG=\$HOME/.repo-transfer/config
                    if [ -f \"\$CFG\" ]; then
                        while IFS=\"=\" read -r k v; do
                            case \"\$k\" in base_path) v=\$(echo \"\$v\" | xargs); BP=\"\${v/#\\~/\$HOME}\" ;; esac
                        done < \"\$CFG\"
                    fi
                    echo \"\$BP\"
                '") || REMOTE_BASE="~"
                echo -e "${BLUE}[$REPO_NAME] Connecting to $SSH_HOST:$REMOTE_BASE/$REPO_NAME...${NC}"
                exec ssh $WORKER_SSH_ID -t "$SSH_HOST" "cd '$REMOTE_BASE/$REPO_NAME' && exec \$SHELL -l"
                ;;
            help|--help|-h)
                echo "Usage: hive repo <command>"
                echo ""
                echo "Registry:"
                echo "  add <worker> [name]         Register current repo on a worker"
                echo "  ls [worker]                 List repos (all workers or specific)"
                echo "  rm <worker> <name>          Remove a repo from a worker"
                echo ""
                echo "Transfer (refspec: <local_branch>[:<repo_name>][@<remote_branch>]):"
                echo "  send <worker> [refspec]     Send repo to a worker"
                echo "  fetch <worker> [refspec]    Fetch repo from a worker"
                echo "  ssh <worker> [repo_name]    SSH into worker at repo directory"
                exit 0
                ;;
            *)
                echo -e "${RED}Unknown repo command: ${SUBCMD:-<none>}${NC}"
                echo "Run 'hive repo help' for usage"
                exit 1
                ;;
        esac
        ;;
    help|--help|-h)
        show_help
        ;;
    version|--version|-v)
        echo "hive v1.0.0"
        ;;
    *)
        echo -e "${RED}Unknown command: $CMD${NC}"
        echo "Run 'hive help' for usage"
        exit 1
        ;;
esac
